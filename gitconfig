# define command which will be used when "nvim" is set as a merge tool
[mergetool "nvim"]
  ; cmd = nvim -d -f -c \"Gdiffsplit!\" \"$LOCAL\" \"$MERGED\" \"$REMOTE\"
  cmd = "nvim -d -c \"wincmd l\" -c \"norm ]c\" \"$LOCAL\" \"$MERGED\" \"$REMOTE\""
[mergetool]
